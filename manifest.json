{
	"manifest_version": 2,
	"name": "Конвертер валют (Finance.ua)",
	"description": "Неофициальное расширение для быстрого доступа к конвертеру валют от Finance.ua",
	"version": "1.0",
	"icons": { 
		"16": "img/icon16.png",
		"32": "img/icon32.png",
    "48": "img/icon48.png",
		"128": "img/icon128.png" 
	},
	"browser_action": {
		"default_icon": {                    
			"19": "img/icon32.png",          
			"38": "img/icon48.png"          
		},
		"default_popup": "popup.html"
	},
  "permissions": [
    "http://content.finance.ua/ru/converters/currency-embed"
  ]
}